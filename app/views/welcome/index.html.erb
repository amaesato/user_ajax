
<div class='container'>
  <div class='row'>
    <div class='col-xs-12 col-lg-8 page-header'>
      <h1>The Fake Users <small>adding and deleting made possible</small></h1>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-12 col-lg-4'>
      <button id='view_users' type='button' class='btn btn-primary btn-sm'>View Users</button>
      <button id='add_user' type='button' class='btn btn-primary btn-sm'>Add User</button>
    </div>
  </div>

  <div class='row'>
    <div class='col-xs-12 col-md-6'>
      <div id='edit_user' class='no-display'>
        <h3></h3>
        <form id='edit_user_form'>
          <input id='edit_first_name' class='form-control' name='user[first_name]' placeholder='First Name' />
          <br />
          <input id='edit_last_name' class='form-control' name='user[last_name]' placeholder='Last Name' />
          <br />
          <input id='edit_phone_number' class='form-control' name='user[phone_number]' placeholder='Phone Number' />
          <br />
          <input type='hidden' id='user_id' />
          <input type='submit' />
        </form>
      </div>
    </div>
  </div>


  <div class='row'>
    <div id='add_new_user' class='no-display col-xs-8'>
      <h3>Add A User</h3>
      <form action="/users" method="POST" id="add_user_form" class='col-xs-12 col-sm-6'>
        <input id='user_first_name' class='form-control' type='text' placeholder="First Name" name="user[first_name]" required />
        <br />
        <input id='user_last_name' class='form-control' type='text' placeholder="Last Name" name="user[last_name]" required />
        <br />
        <input id='user_phone_number' class='form-control' placeholder="Phone Number" name="user[phone_number]" required/>
        <br />
        <input type='submit' class='btn btn-primary'/>
      </form>
    </div>
  </div>

  <div class='row'>
      <h3 id='users_header'></h3>
      <ul id="users">
      </ul>
      <h3 id='one_user_header'></h3>
      <ul id='view_a_user'>
      </ul>
  </div>
</div>
